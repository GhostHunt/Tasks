<s:SparkSkin 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	alpha.disabled="0.5" minWidth="89" minHeight="84">
	<fx:Metadata>[HostComponent("DGrid")]</fx:Metadata>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
		<s:State name="down" />
	</s:states>
	
	
	<fx:Declarations>			
		
		<!--- @private -->
		<fx:Component id="columnSeparator">
			<s:Line>
				<s:stroke>
					<s:SolidColorStroke color="#d0d7e5" weight="1" caps="square"/> <!--!!!!!!!! COLUMNS!!!!!!-->
				</s:stroke>
			</s:Line>
		</fx:Component>
		
		<!--- Defines the value of the columnSeparator property for the columnHeaderGroup. -->
		<fx:Component id="headerColumnSeparator">
			<s:Line>
				<s:stroke>
					<s:SolidColorStroke color="#9fb7cf" weight="1" caps="square"/> <!--!!!!!!!! HIDER COLUMNS!!!!!!-->
				</s:stroke>
			</s:Line>
		</fx:Component>
		
		<!--- Defines the value of the headerRenderer property for the columnHeaderGroup. 
		The default is spark.skins.spark.DefaultGridHeaderRenderer -->
		<fx:Component id="headerRenderer">
			<s:DefaultGridHeaderRenderer />
		</fx:Component>
		
		
		
		<!--- @private -->
		<fx:Component id="rowSeparator">
			<s:Line>
				<s:stroke>
					<s:SolidColorStroke color="#d0d7e5" weight="1" caps="square"/> <!--!!!!!!!! ROWS!!!!!!-->
				</s:stroke>
			</s:Line>
		</fx:Component>
		
		
		
		<!--- @private -->
		<fx:Component id="editorIndicator">
			<s:Rect>
				<s:fill>
					<s:SolidColor color="#00fe12"/>
				</s:fill>                
			</s:Rect>
		</fx:Component>                    
		
	</fx:Declarations>
	
	
	<fx:Declarations>
		
		<fx:Component id="caretIndicator">		
			
			<s:Rect implements="spark.components.gridClasses.IGridVisualElement">
				<fx:Script>
					<![CDATA[
						import mx.controls.dataGridClasses.DataGridColumn;
						
						import spark.components.DataGrid;
						import spark.components.Grid;
						/**
						 * @private
						 */
						
						public function prepareGridVisualElement(grid:Grid, rowIndex:int, columnIndex:int):void
						{
							const dataGrid:DataGrid = grid.dataGrid;
							if (!dataGrid || columnIndex==0)
								return;		
						}
					]]>
				</fx:Script>
				
				<s:stroke>					
					<s:SolidColorStroke id="caretIndicatorFill" color="#000000" weight="3" />
				</s:stroke>				
			</s:Rect>						
		</fx:Component>			
		
		<fx:Component id="selectionIndicator">		
			<s:VGroup verticalAlign="bottom" horizontalAlign="right" gap="-4">
				<s:BitmapImage width="7" height="7"  source="assets/4.png">
					<fx:Script>
						<![CDATA[
							import mx.controls.dataGridClasses.DataGridColumn;
							
							import spark.components.DataGrid;
							import spark.components.Grid;
							/**
							 * @private
							 */
							
							public function prepareGridVisualElement(grid:Grid, rowIndex:int, columnIndex:int):void
							{
								const dataGrid:DataGrid = grid.dataGrid;
								if (!dataGrid || columnIndex==0)
									return;		
							}
						]]>
					</fx:Script>
				</s:BitmapImage>
				
				<s:Rect>
					<s:stroke>
						<s:SolidColorStroke id="selectionIndicatorFill" color="#000000" weight="3" />
					</s:stroke>
				</s:Rect>
				
			</s:VGroup>
			
		</fx:Component>	
		
		<fx:Component>
			<s:Rect >				
				<s:stroke>					
					<s:SolidColorStroke color="#000000" weight="3" />
				</s:stroke>				
			</s:Rect>
		</fx:Component>
		
	</fx:Declarations>	
	
	
	<!-- column header, content -->
	<s:VGroup horizontalAlign="justify" gap="0" left="0" right="0" top="0" bottom="0">
		
		<!--- @private -->
		<s:GridColumnHeaderGroup id="columnHeaderGroup"
								 paddingLeft="1" paddingTop="1" paddingRight="1" minHeight="21" 
								 columnSeparator="{headerColumnSeparator}"
								 headerRenderer="HeadHeaderRenderer"/>
		
		<s:Group height="100%">
			
			<!--- @private -->
			<s:Rect id="background" left="1" right="1" top="1" bottom="1" >
				<s:fill>
					<!--- Defines the color of the background. The default color is 0xFFFFFF. -->
					<s:SolidColor id="bgFill" color="0xFFFFFF" />
				</s:fill>
			</s:Rect>
			
			<!-- header separator, scroller and grid -->
			<s:VGroup horizontalAlign="justify" height="100%" width="100%" gap="-1">
				<!--- @private -->
				<s:Line id="headerSeparator">
					<s:stroke>
						<s:SolidColorStroke color="#9eb6ce" weight="1" caps="square"/>  <!--!!!!!!!! liiiiiiineeeee !!!!!!-->
					</s:stroke>
				</s:Line>       
				
				<!--- @private -->
				<s:Scroller id="scroller" minViewportInset="1" hasFocusableChildren="false" height="100%">
					<!--- @private -->
					<s:Grid id="grid" itemRenderer="spark.skins.spark.DefaultGridItemRenderer">
						<s:GridLayer name="backgroundLayer"/>
						<s:GridLayer name="selectionLayer"/>
						<s:GridLayer name="editorIndicatorLayer"/>                            
						<s:GridLayer name="rendererLayer"/>
						<s:GridLayer name="overlayLayer"/>
					</s:Grid>                    
				</s:Scroller>
			</s:VGroup>
			
		</s:Group>
		
	</s:VGroup>
	
	
	<!-- border -->
	<!--- @private -->
	<s:Rect id="border"  left="0" right="0" top="0" bottom="0" 
			left.normal="0" right.normal="0" top.normal="0" bottom.normal="0">
		<s:stroke>
			<!--- @private -->
			<s:SolidColorStroke color="#ffffff" id="borderStroke" weight="1"/>
		</s:stroke>
	</s:Rect>    
	
</s:SparkSkin>
